---
const { text } = Astro.props;
---

<div class="subheader">
    <h3>{text}</h3>
</div>
<style>
    @import url("https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@500&display=swap");

    .subheader {
        color: #386cd4;
        font-size: 25px;
        letter-spacing: 2px;
        word-spacing: 5px;
        margin-bottom: 20px;
    }
    h3 {
        font-family: "Roboto Mono", monospace;
    }
</style>
