---
const { icon, header } = Astro.props;
---

<div class="header">
    <h1 style="display: inline-flex; align-items: center;">
        <span style="margin-right: 20px;" class="header-brackets">&lt;</span>
        <span>{header}</span>
        <span style="margin-left: 20px;" class="header-brackets">&gt;</span>
    </h1>
    <img class="header-icons" src={icon} alt="Info Icon" />
</div>
<style>
    .header {
        display: flex;
        flex-direction: row;
        align-items: flex-end;
        justify-content: space-between;
        margin-bottom: 60px;
    }
    .header-brackets {
        color: #386cd4;
        font-size: 50px;
    }
    .header-icons {
        height: 40px;
        padding-bottom: 20px;
    }
</style>
